  section.intro&attributes(attributes)
    if (currentUrl === "index.html")
      h1.visually-hidden Север-Связь
      .intro__slider.swiper(data-slider="intro")
        .intro__slides.swiper-wrapper
          each item in list
            .intro__slide.swiper-slide
              a.intro__link(href="#")
                .intro__info
                  .container
                    .intro__wrapper
                      h2.title.title--h1.intro__title!=item.title
                      p.intro__description!=item.description
